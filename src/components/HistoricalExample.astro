---
interface Props {
  title?: string;
  date?: string;
}

const { title, date } = Astro.props;
---

<div class="my-6 p-5 bg-amber-50 border border-amber-200 rounded-lg">
  {title && <h4 class="text-lg font-bold text-amber-900 mb-1">{title}</h4>}
  {date && <p class="text-sm text-amber-700 mb-3">{date}</p>}
  <div class="prose prose-amber max-w-none text-gray-800">
    <slot />
  </div>
</div>
