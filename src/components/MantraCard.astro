---
interface Props {
  sanskrit?: string;
  transliteration?: string;
  meaning?: string;
}

const { sanskrit, transliteration, meaning } = Astro.props;
---

<div class="my-6 p-5 bg-orange-50 border border-orange-200 rounded-lg">
  {sanskrit && <p class="text-2xl font-bold text-orange-900 mb-1">{sanskrit}</p>}
  {transliteration && <p class="text-sm text-orange-700 italic mb-2">{transliteration}</p>}
  {meaning && <p class="text-base text-gray-800">{meaning}</p>}
  <slot />
</div>
