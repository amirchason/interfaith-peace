---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="my-8 p-6 bg-blue-50 border-l-4 border-blue-500 rounded-r-lg">
  <h3 class="text-xl font-bold text-blue-900 mb-4">{title}</h3>
  <div class="prose prose-blue max-w-none text-gray-800">
    <slot />
  </div>
</div>
