---
interface Props {
  word?: string;
  transliteration?: string;
  meaning?: string;
}

const { word, transliteration, meaning } = Astro.props;
---

<div class="my-6 p-5 bg-indigo-50 border border-indigo-200 rounded-lg">
  {word && <p class="text-2xl font-bold text-indigo-900 mb-1">{word}</p>}
  {transliteration && <p class="text-sm text-indigo-700 italic mb-2">{transliteration}</p>}
  {meaning && <p class="text-base text-gray-800">{meaning}</p>}
  <slot />
</div>
