---
interface Props {
  name?: string;
  role?: string;
  description?: string;
}

const { name, role, description } = Astro.props;
---

<div class="my-6 p-5 bg-purple-50 border border-purple-200 rounded-lg">
  {name && <h4 class="text-lg font-bold text-purple-900 mb-1">{name}</h4>}
  {role && <p class="text-sm text-purple-700 mb-3">{role}</p>}
  <div class="prose prose-sm max-w-none text-gray-800">
    {description && <p>{description}</p>}
    <slot />
  </div>
</div>
