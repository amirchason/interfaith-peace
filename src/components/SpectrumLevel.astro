---
interface Props {
  level?: string;
  name?: string;
  description?: string;
}

const { level, name, description } = Astro.props;
---

<div class="my-6 p-5 bg-gradient-to-r from-green-50 to-red-50 border border-gray-300 rounded-lg">
  <div class="flex items-center gap-3 mb-3">
    {level && <span class="text-2xl font-bold text-gray-900">{level}</span>}
    {name && <h4 class="text-lg font-bold text-gray-900">{name}</h4>}
  </div>
  {description && <p class="text-sm text-gray-700 mb-3">{description}</p>}
  <div class="prose prose-sm max-w-none">
    <slot />
  </div>
</div>
