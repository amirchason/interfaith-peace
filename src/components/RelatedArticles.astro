---
interface Props {
  articles?: string[];
}

const { articles } = Astro.props;

// Only render if articles exist and array has items
const hasArticles = Array.isArray(articles) && articles.length > 0;
---

{hasArticles && (
  <div class="my-12 p-6 bg-gray-100 rounded-lg">
    <h3 class="text-2xl font-bold mb-4">ðŸ“š Related Articles</h3>
    <ul class="space-y-2">
      {articles!.filter(article => typeof article === 'string').map(article => (
        <li>
          <a href={`/articles/${article}`} class="text-blue-600 hover:text-blue-800 hover:underline">
            â†’ {article.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
          </a>
        </li>
      ))}
    </ul>
  </div>
)}
