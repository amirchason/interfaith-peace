---
interface Props {
  title?: string;
  period?: string;
}

const { title, period } = Astro.props;
---

<div class="my-6 p-5 bg-yellow-50 border-l-4 border-yellow-500 rounded-r-lg">
  {title && <h4 class="text-lg font-bold text-yellow-900 mb-1">{title}</h4>}
  {period && <p class="text-sm text-yellow-700 mb-3">{period}</p>}
  <div class="prose prose-yellow max-w-none text-gray-800">
    <slot />
  </div>
</div>
