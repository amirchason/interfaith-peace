---
interface Props {
  title?: string;
  description?: string;
  context?: string;
}

const { title, description, context } = Astro.props;
---

<div class="my-8 p-6 bg-amber-50 border-l-4 border-amber-500 rounded-r-lg">
  {title && <h3 class="text-xl font-bold text-amber-900 mb-2">{title}</h3>}
  {context && <p class="text-sm text-amber-700 italic mb-4">{context}</p>}
  <div class="prose prose-amber max-w-none text-gray-800">
    {description && <p>{description}</p>}
    <slot />
  </div>
</div>
