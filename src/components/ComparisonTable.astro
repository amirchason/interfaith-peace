---
interface Props {
  title?: string;
  headers: string[];
  rows: any[];
}

const { title, headers, rows = [] } = Astro.props;

// Handle both array of arrays and array of objects
const normalizedRows = rows.map(row => {
  if (Array.isArray(row)) {
    // Already an array - use as is
    return row;
  } else if (typeof row === 'object' && row !== null) {
    // Object - extract values based on first object's keys
    return Object.values(row);
  }
  return [row]; // Fallback for primitive values
});
---

<div class="my-8 overflow-x-auto">
  {title && <h3 class="text-xl font-bold mb-4">{title}</h3>}
  <table class="min-w-full bg-white border border-gray-300">
    <thead class="bg-gray-100">
      <tr>
        {headers.map(header => (
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider border-b">
            {header}
          </th>
        ))}
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      {normalizedRows.map(row => (
        <tr class="hover:bg-gray-50">
          {row.map(cell => (
            <td class="px-6 py-4 text-sm text-gray-900 border-b">
              {cell}
            </td>
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div>
