---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;

// Religion data
const religions = [
  {
    name: 'Christianity',
    icon: '‚õ™',
    color: 'from-blue-500/20 to-blue-600/20',
    borderColor: 'border-blue-500/30',
    textColor: 'text-blue-400',
    path: 'christianity'
  },
  {
    name: 'Islam',
    icon: 'üïå',
    color: 'from-green-500/20 to-green-600/20',
    borderColor: 'border-green-500/30',
    textColor: 'text-green-400',
    path: 'islam'
  },
  {
    name: 'Hinduism',
    icon: 'üõï',
    color: 'from-orange-500/20 to-orange-600/20',
    borderColor: 'border-orange-500/30',
    textColor: 'text-orange-400',
    path: 'hinduism'
  },
  {
    name: 'Buddhism',
    icon: 'üèØ',
    color: 'from-purple-500/20 to-purple-600/20',
    borderColor: 'border-purple-500/30',
    textColor: 'text-purple-400',
    path: 'buddhism'
  },
  {
    name: 'Judaism',
    icon: 'üïç',
    color: 'from-cyan-500/20 to-cyan-600/20',
    borderColor: 'border-cyan-500/30',
    textColor: 'text-cyan-400',
    path: 'judaism'
  },
];

// Features with proper trailing slashes
const features = [
  {
    icon: 'üìñ',
    title: 'Sacred Teachings',
    description: 'Explore peace teachings from all major world religions',
    gradient: 'from-blue-600 via-purple-600 to-pink-600',
    link: `${base}/teachings/`,
    stats: '100+ Teachings'
  },
  {
    icon: 'üïäÔ∏è',
    title: 'Counter-Extremism',
    description: 'Evidence-based research empowering moderate voices',
    gradient: 'from-orange-600 via-red-600 to-pink-600',
    link: `${base}/articles/`,
    stats: '30+ Articles'
  },
  {
    icon: 'ü§ù',
    title: 'Interfaith Unity',
    description: 'Building bridges through shared commitment to peace',
    gradient: 'from-green-600 via-teal-600 to-blue-600',
    link: `${base}/teachings/`,
    stats: '5+ Traditions'
  },
];
---

<BaseLayout
  title="Interfaith Peace Initiative - Amplifying Voices of Peace"
  description="Explore universal teachings of peace from Christianity, Islam, Hinduism, Buddhism, and Judaism. Evidence-based research, interfaith dialogue, and counter-extremism resources."
>
  <!-- Mobile-First Hero Section -->
  <section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-purple-950 to-slate-950"></div>

    <!-- Animated Gradient Orbs -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
      <div class="orb orb-3"></div>
    </div>

    <!-- Dot Pattern Overlay -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(255,255,255,0.05)_1px,transparent_0)] [background-size:40px_40px]"></div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-20">
      <div class="max-w-5xl mx-auto text-center">

        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 mb-8 sm:mb-12 rounded-full bg-white/5 border border-white/10 backdrop-blur-sm animate-fade-in">
          <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
          <span class="text-xs sm:text-sm text-white/80 font-medium">Interfaith Peace Initiative</span>
        </div>

        <!-- Main Heading -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black mb-6 sm:mb-8 leading-tight animate-slide-up">
          <span class="block text-white mb-2">Voices of Peace</span>
          <span class="block bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent animate-gradient">
            Across All Faiths
          </span>
        </h1>

        <!-- Description -->
        <p class="text-base sm:text-lg md:text-xl text-white/70 max-w-3xl mx-auto mb-10 sm:mb-12 leading-relaxed animate-slide-up-delayed px-4">
          Amplifying moderate religious voices. Building interfaith bridges.
          <span class="block mt-2 text-purple-300">Empowering peace through understanding.</span>
        </p>

        <!-- CTA Buttons - Mobile Optimized -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 sm:mb-16 animate-slide-up-delayed-2 px-4">
          <a href={`${base}/teachings/`} class="btn-primary group w-full sm:w-auto">
            <span>Explore Teachings</span>
            <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a href={`${base}/articles/`} class="btn-secondary group w-full sm:w-auto">
            <span>Read Research</span>
            <svg class="w-5 h-5 ml-2 transform group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </a>
        </div>

        <!-- Religion Icons - Mobile Scrollable -->
        <div class="religion-scroll-container px-4">
          <div class="religion-icons">
            {religions.map((religion, index) => (
              <a
                href={`${base}/teachings/${religion.path}/`}
                class={`religion-card group ${religion.borderColor}`}
                style={`animation-delay: ${index * 100}ms`}
              >
                <div class={`absolute inset-0 bg-gradient-to-br ${religion.color} rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300`}></div>
                <div class="relative z-10 flex flex-col items-center gap-3">
                  <span class="text-4xl sm:text-5xl transform group-hover:scale-110 transition-transform duration-300">{religion.icon}</span>
                  <span class={`text-sm sm:text-base font-semibold ${religion.textColor}`}>{religion.name}</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce hidden sm:block">
      <svg class="w-6 h-6 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </section>

  <!-- Feature Cards Section - Mobile First -->
  <section class="features-section relative py-12 sm:py-20 lg:py-32 bg-gradient-to-b from-slate-950 to-slate-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Section Header -->
      <div class="text-center mb-12 sm:mb-16 lg:mb-20">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black mb-4 sm:mb-6">
          <span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
            What We Offer
          </span>
        </h2>
        <p class="text-base sm:text-lg lg:text-xl text-white/60 max-w-2xl mx-auto px-4">
          Comprehensive resources for peace, understanding, and interfaith cooperation
        </p>
      </div>

      <!-- Feature Cards Grid - Mobile Optimized -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
        {features.map((feature, index) => (
          <a
            href={feature.link}
            class="feature-glass-card group"
            style={`animation-delay: ${index * 150}ms`}
          >
            {/* Animated Border */}
            <div class={`absolute inset-0 rounded-3xl bg-gradient-to-r ${feature.gradient} opacity-0 group-hover:opacity-20 blur transition-opacity duration-500`}></div>

            {/* Card Content */}
            <div class="relative z-10 flex flex-col h-full">
              {/* Icon Header */}
              <div class="flex items-start justify-between mb-6">
                <div class={`w-16 h-16 sm:w-20 sm:h-20 rounded-2xl bg-gradient-to-br ${feature.gradient} flex items-center justify-center transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300`}>
                  <span class="text-3xl sm:text-4xl">{feature.icon}</span>
                </div>
                <div class="px-3 py-1 rounded-full bg-white/5 border border-white/10">
                  <span class="text-xs font-medium text-white/60">{feature.stats}</span>
                </div>
              </div>

              {/* Content */}
              <div class="flex-1">
                <h3 class="text-xl sm:text-2xl font-bold text-white mb-3 group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:bg-clip-text group-hover:from-white group-hover:to-purple-300 transition-all">
                  {feature.title}
                </h3>
                <p class="text-sm sm:text-base text-white/60 leading-relaxed">
                  {feature.description}
                </p>
              </div>

              {/* Arrow Icon */}
              <div class="mt-6 flex items-center text-purple-400 group-hover:text-pink-400 transition-colors">
                <span class="text-sm font-semibold">Explore</span>
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section - Mobile Optimized -->
  <section class="cta-section relative py-16 sm:py-24 lg:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900 via-pink-900 to-orange-900"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(255,255,255,0.05)_1px,transparent_0)] [background-size:40px_40px]"></div>

    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl lg:text-6xl font-black text-white mb-6 sm:mb-8 px-4">
        Join the Movement
      </h2>
      <p class="text-base sm:text-lg lg:text-2xl text-white/80 max-w-3xl mx-auto mb-10 sm:mb-12 leading-relaxed px-4">
        Be part of a global community amplifying voices of peace, building understanding, and countering extremism through education and dialogue.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center px-4">
        <a href={`${base}/teachings/`} class="btn-white group w-full sm:w-auto">
          <span>Start Exploring</span>
          <svg class="w-5 h-5 ml-2 transform group-hover:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
        <a href={`${base}/articles/`} class="btn-outline-white group w-full sm:w-auto">
          <span>Read Research</span>
          <svg class="w-5 h-5 ml-2 transform group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Mobile-First Animations */
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }

  .animate-slide-up {
    animation: slide-up 1s ease-out 0.2s both;
  }

  .animate-slide-up-delayed {
    animation: slide-up 1s ease-out 0.4s both;
  }

  .animate-slide-up-delayed-2 {
    animation: slide-up 1s ease-out 0.6s both;
  }

  .animate-gradient {
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
  }

  /* Animated Gradient Orbs */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.3;
    animation: float-orb 20s infinite ease-in-out;
  }

  .orb-1 {
    width: min(80vw, 500px);
    height: min(80vw, 500px);
    background: radial-gradient(circle, #3b82f6, transparent);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: min(70vw, 400px);
    height: min(70vw, 400px);
    background: radial-gradient(circle, #a855f7, transparent);
    bottom: -10%;
    right: -10%;
    animation-delay: 7s;
  }

  .orb-3 {
    width: min(60vw, 350px);
    height: min(60vw, 350px);
    background: radial-gradient(circle, #ec4899, transparent);
    top: 50%;
    left: 50%;
    animation-delay: 14s;
  }

  @keyframes float-orb {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(50px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-50px, 50px) scale(0.9);
    }
  }

  /* Buttons - Mobile Optimized */
  .btn-primary {
    @apply px-6 sm:px-8 py-3 sm:py-4 rounded-full bg-gradient-to-r from-purple-600 to-pink-600 text-white font-semibold text-sm sm:text-base inline-flex items-center justify-center transition-all duration-300 hover:shadow-[0_0_30px_rgba(168,85,247,0.5)] hover:scale-105 active:scale-95;
  }

  .btn-secondary {
    @apply px-6 sm:px-8 py-3 sm:py-4 rounded-full bg-white/10 text-white font-semibold text-sm sm:text-base border border-white/20 backdrop-blur-sm inline-flex items-center justify-center transition-all duration-300 hover:bg-white/20 hover:border-white/40 hover:scale-105 active:scale-95;
  }

  .btn-white {
    @apply px-6 sm:px-8 py-3 sm:py-4 rounded-full bg-white text-purple-900 font-semibold text-sm sm:text-base inline-flex items-center justify-center transition-all duration-300 hover:shadow-[0_10px_40px_rgba(255,255,255,0.3)] hover:scale-105 active:scale-95;
  }

  .btn-outline-white {
    @apply px-6 sm:px-8 py-3 sm:py-4 rounded-full bg-transparent text-white font-semibold text-sm sm:text-base border-2 border-white inline-flex items-center justify-center transition-all duration-300 hover:bg-white hover:text-purple-900 hover:scale-105 active:scale-95;
  }

  /* Religion Icons - Mobile Scrollable */
  .religion-scroll-container {
    @apply overflow-x-auto pb-4 -mx-4 px-4;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .religion-scroll-container::-webkit-scrollbar {
    display: none;
  }

  .religion-icons {
    @apply flex gap-4 sm:gap-6 justify-start sm:justify-center min-w-max sm:min-w-0;
  }

  .religion-card {
    @apply relative flex-shrink-0 w-28 sm:w-32 h-32 sm:h-36 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10 flex items-center justify-center transition-all duration-300 hover:scale-110 hover:bg-white/10;
    animation: fade-in 0.6s ease-out both;
  }

  /* Feature Glass Cards - Mobile Optimized */
  .feature-glass-card {
    @apply relative p-6 sm:p-8 rounded-3xl bg-white/5 backdrop-blur-sm border border-white/10 transition-all duration-500 hover:scale-105 hover:bg-white/10 hover:border-white/20 hover:shadow-[0_20px_60px_rgba(168,85,247,0.3)] block;
    animation: fade-in 0.8s ease-out both;
  }

  /* Responsive Improvements */
  @media (max-width: 640px) {
    .hero-section {
      min-height: 100dvh; /* Use dynamic viewport height on mobile */
    }

    .orb {
      filter: blur(40px); /* Reduce blur on mobile for performance */
    }
  }

  /* Performance Optimization */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }

  /* Touch-friendly hover states */
  @media (hover: none) and (pointer: coarse) {
    .religion-card:active,
    .feature-glass-card:active,
    .btn-primary:active,
    .btn-secondary:active,
    .btn-white:active,
    .btn-outline-white:active {
      transform: scale(0.95);
    }
  }
</style>
